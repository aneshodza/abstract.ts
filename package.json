{
  "name": "adt_ts",
  "version": "0.0.1",
  "description": "A TypeScript-based library for ADTs (Abstract Data Types)",
  "main": "index.js",
  "scripts": {
    "lint": "eslint 'src/**/*.ts'",
    "fix-lint": "eslint 'src/**/*.ts' --fix",
    "prepare": "husky",
    "build": "npm run build:compile && npm run build:fix",
    "build:fix": "fix-esm-import-path out/*.js",
    "build:compile": "tsc",
    "build:clean": "rm -rf out",
    "test": "jest --coverage",
    "develop": "npx tsc --watch --outDir out/"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/aneshodza/adt_ts.git"
  },
  "keywords": [
    "ADT"
  ],
  "author": "anes hodza",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/aneshodza/adt_ts/issues"
  },
  "homepage": "https://github.com/aneshodza/adt_ts#readme",
  "type": "module",
  "devDependencies": {
    "typescript": "^5.6.2",
    "@eslint/js": "^9.0.0",
    "@typescript-eslint/eslint-plugin": "^7.7.0",
    "@typescript-eslint/parser": "^7.7.0",
    "eslint": "^8.57.0",
    "eslint-plugin-jsdoc": "^48.2.3",
    "husky": "^9.0.11",
    "typescript-eslint": "^7.6.0",
    "fix-esm-import-path": "^1.5.0",
    "@types/jest": "^29.5.12",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.2"
  }
}
